@using Microsoft.FSharp.Core
@using IdentityServer4.Models
@model ErrorViewModel

@{
    var errorMessage = FSharpOption<ErrorMessage>.get_IsSome(Model!.Error)? Model!.Error.Value : null;
    var error = errorMessage?.Error;
    var errorDescription = errorMessage?.ErrorDescription;
    var requestId = errorMessage?.RequestId;
}

<div class="error-page">
    <div class="lead">
        <h1>Error</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="alert alert-danger">
                Sorry, there was an error

                @if (error != null)
                {
                    <strong>
                        <em>
                            : @error
                        </em>
                    </strong>

                    if (errorDescription != null)
                    {
                        <div>@errorDescription</div>
                    }
                }
            </div>

            @if (requestId != null)
            {
                <div class="request-id">Request Id: @requestId</div>
            }
        </div>
    </div>
</div>
